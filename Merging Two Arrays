#include <stdio.h>

int main() {
    int A[50], B[50], C[100], n1, n2, i, j;

    printf("Enter size of first array: ");
    scanf("%d", &n1);
    printf("Enter elements of first array:\n");
    for (i = 0; i < n1; i++)
        scanf("%d", &A[i]);

    printf("Enter size of second array: ");
    scanf("%d", &n2);
    printf("Enter elements of second array:\n");
    for (i = 0; i < n2; i++)
        scanf("%d", &B[i]);

    for (i = 0; i < n1; i++)
        C[i] = A[i];

    for (j = 0; j < n2; j++)
        C[i + j] = B[j];

    printf("Merged Array: ");
    for (i = 0; i < n1 + n2; i++)
        printf("%d ", C[i]);

    return 0;
}
